<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BasicWeeklyProgressFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragment_basic_monthly_progress_1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_basic_monthly_progress_2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_basic_monthly_progress_3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_basic_monthly_progress_4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>